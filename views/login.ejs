<div id="headingmain1" col-md-10 col-md-offset-1" ng-init = "loginInit()">
    <h1 id="heading_login">Sign-in</h1>
    <div ng-app="FormlyApp" id="smallcon2" class="container customContainer col-md-10 col-md-offset-1">
        <form ng-submit="loginUser();" name="myForm"  novalidate>

        <form class="form-horizontal" action='' method="POST">
        <fieldset>
            <div id="legend">
                <legend class="">Sign In</legend>
            </div>
            <div class="form-group">
                <label for="username">E-Mail or Username</label>
                <input type="text" class="form-control-login" id="username" placeholder="E-Mail or UserName" ng-model="login.user" 
                   required/>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control-login" id="password" placeholder="Password" ng-model="login.password"
                   required/>
            </div>
            <div class="control-group">
            <input type="submit" class="glyphicon glyphicon-circle-arrow-right" value="Login">
            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
            &emsp;&emsp;
            <a ui-sref="base.registration" class="btn btn-info">
                Register <span class="glyphicon glyphicon-circle-arrow-right"></span>
            </a>

        </div>
       </fieldset>
        </form>
    </form>
</div>