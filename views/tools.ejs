<div ng-app="FormlyApp" id="smallcon1" class="container col-md-10 col-md-offset-1">

    <div class="row">
        <div class="col-md-12 skill" >

            <form ng-submit="addNewtools()">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th><input type="checkbox" ng-model="selectedAll" ng-click="checkAll()" /></th>
                        <th>Category</th>
                        <th>Method/Skill Name</th>
                        <th>Vendor/Distributor</th>
                        <th style="width: 30px;">Number of LinkedIn Endorsements for this Tool</th>
                        <th style ="width: 60px">Your Current Level of Proficiency<br>
                            <table width=100% height= "100%" bottom= "0">
                                <tr style= "display:block margin:5px 0">
                                <th  width=25% height: 100%><pre><span style="font-size:12px">I have acheived >25% Proficiency </span><br><br>Basic</pre></th>
                                <th  width=25% height: 100%><pre><span style="font-size:12px">I have acheived >50% Proficiency </span><br><br>Inter</pre></th>
                                <th  width=25% height: 100%><pre><span style="font-size:12px">I have acheived >75% Proficiency </span><br><br>Advanced </pre></th>
                                <th  width=25% height: 100%><pre><span style="font-size:12px">I have acheived >95% Proficiency </span><br><br>Expert</pre></th>
                                </tr>
                            </table>
                            <!--<div>Basic&emsp;&emsp;&emsp;&emsp;Intermediate&emsp;&emsp;Advanced&emsp;&emsp;&emsp;Expert</div>-->  
                            </th>

                        <!--<th style="width: 30px;" ng-click="orderByField='year'; reverseSortTools = !reverseSortTools">
                            Year of acheived Proficiency
                            <span class="glyphicon glyphicon-sort"></span>
                            <span ng-show="orderByField == 'year'"></span>
                            <span ng-show="!reverseSortTools"></span>
                            <span ng-show="reverseSortTools"></span>
                        </th>-->
                        <th>Formal Certification</th>
                        <th style="width: 30px;">I have used this method/skill in a project or position in the past 3 years</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="personalDetail in personalDetailsTools|orderBy:orderByField:reverseSortTools">
                        <!--<td>-->
                        <!--<input type="checkbox" ng-model="personalDetail.selected"/></td>-->
                        <td>
                            <input type="checkbox" ng-model="personalDetail.selected"/>
                        </td>
                        <td style="width: 30px;">
                            <select ng-model="personalDetail.category" required>
                                <option value="Software - USER">Software-User</option>
                                <option value="Software - Programming">Software Programming</option>
                                <option value="Device Operation">Device Operation</option>
                            </select>
                        </td>
                        <td style="width: 30px;">
                            <input type="text" ng-model="personalDetail.software" required/>
                        <td style="width: 30px;">
                            <input class="skill1" type="text" ng-model="personalDetail.vendor" required/>
                        </td>
                        <td style="width: 30px;">
                            <input class="skill2" type="number" min="0" max="30" step="1" placeholder="0" value ="0" ng-model="personalDetail.linkedin"/>
                        </td>
                        <td >
                        <table width="100%">
                            <tr>
                            <td width= "25%" ><select border:"1"  ng-style = "{'background-color': dropDownColorSetter(personalDetail.basicyear, 'basic')}" ng-change ="toolsClearDropDowns(personalDetail.basicyear, $index);" width="100%" id="basicyear" ng-options="year for year in years" ng-model="personalDetail.basicyear" ></select></td>
                            <td width= "25%" ><select border:"1" ng-style = "{'background-color': dropDownColorSetter(personalDetail.interyear, 'inter')}" ng-change ="toolsClearDropDowns(personalDetail.interyear, $index);" width="100%" id="interyear" ng-options="year for year in years" ng-model="personalDetail.interyear" ></select></td>
                            <td width= "25%" ><select border:"1" ng-style = "{'background-color': dropDownColorSetter(personalDetail.advancedyear, 'advanced')}" ng-change ="toolsClearDropDowns(personalDetail.advancedyear,$index);" width="100%" id="advancedyear" ng-options="year for year in years" ng-model="personalDetail.advancedyear" ></select></td>
                            <td width= "25%" ><select border:"1" ng-style = "{'background-color': dropDownColorSetter(personalDetail.expertyear, 'expert')}" ng-change ="toolsClearDropDowns(personalDetail.expertyear, $index);" width="100%" id="expertyear" ng-options="year for year in years" ng-model="personalDetail.expertyear" ></select></td>
                            </tr>
                        </table>
                            </td>
                        </td>
                        <td style="width: 30px; margin-left:14px;">
                        <div ng-init = "personalDetail.formal = 'No'">
                            <input type="radio" name="tick3_{{$index}}" value="Yes" ng-model="personalDetail.formal"> Yes
                            <input type="radio" name="tick3_{{$index}}" value="No" ng-model="personalDetail.formal"> No<br>
                        </div
                        </td>
                        <div ng-init = "personalDetail.usage = 'No'">                        
                        <td style="width: 30px; margin-left:14px;">
                            <input type="radio" name="tick4_{{$index}}" value="Yes" ng-model="personalDetail.usage"> Yes
                            <input type="radio" name="tick4_{{$index}}" value="No" ng-model="personalDetail.usage"> No<br>
                        </td>
                        </div>
                        <!--<td>-->
                            <!--<input type="radio" name="tick2" value="Yes" style="margin-left: 20px;" ng-model="personalDetail.usage"> Yes-->
                            <!--<input type="radio" name="tick2" value="No" ng-model="personalDetail.usage"> No<br>-->
                        <!--</td>-->
                    </tr>
                    </tbody>
                </table>

                <div class="form-group">
                    <!--<input ng-hide="!personalDetails.length" type="button" class="btn btn-danger pull-right" ng-click="remove()" value="Remove">-->
                    <input ng-hide="!personalDetailsTools.length" type="button" class=".btn-md btn-danger pull-right" ng-click="removeTools()" value="Remove">
                    <input type="submit" class=".btn-md btn-success addnew pull-right" value="Save">
                    <input type="submit" class=".btn-md btn-primary addnew pull-right" value="Add New">
                </div>
            </form>

        </div>
    </div>

    <!--<button ng-disabled="myForm.$invalid"  type="submit" value="submit" class="btn btn-default">Submit</button>-->
    </form>

</div>
